@import 'var'


.btn,
.nav-pills > li > a,
.form-control,
.modal-content
  border-radius 2px

ul.nav a
  padding 5px 10px

.form-control
  box-shadow none
  height 32px
  padding 8px

  &:focus
    box-shadow none

.radio,
.checkbox
  margin-top 0

label
  font-weight 500

.modal-backdrop
  opacity 0.3

.tab-content
  overflow visible

.lead
  font-size 18px

#editor .dropdown-menu
  border-radius 2px
  min-width 0

  li a
    padding 3px 8px
